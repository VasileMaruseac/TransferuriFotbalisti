<body>
  <div class="container">
    <div class="row">
      <div class="col"></div>

      <div class="col-6">
        <h2><%- title %></h2>
        <form method="POST">
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Nume</span>
            <input
              type="text"
              value="<%- s.nume %>"
              name="nume"
              class="form-control"
            />
            <span class="input-group-text" id="basic-addon1">Liga</span>
            <select name="idLiga" id="ligi">
              <% for ( var i = 0; i< l.length; i++){ %>
              <option value="<%- l[i].dataValues.idLiga %>">
                <%- l[i].dataValues.nume %>
              </option>
              <% } %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Update
          </button>
        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
</body>
